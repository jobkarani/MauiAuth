<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiAuth.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiAuth"
    Shell.FlyoutBehavior="Flyout">


    <ShellItem Route="LoginPage" FlyoutItemIsVisible="False">
        <ShellContent ContentTemplate="{DataTemplate local:LoginPage}"/>
    </ShellItem>
    <ShellItem Route="RegistrationPage" FlyoutItemIsVisible="False">
        <ShellContent ContentTemplate="{DataTemplate local:RegistrationPage}"/>
    </ShellItem>
    <ShellItem Route="Logout" FlyoutItemIsVisible="False">
        <ShellContent ContentTemplate="{DataTemplate local:LoginPage}"/>
    </ShellItem>

</Shell>
